CompileFlags:
  CompilationDatabase: build/
  Add:
    - -std=c++20
    - -Wall
    - -Wextra
Index:
  Background: Build
Diagnostics:
  ClangTidy:
    Add: 
      - "bugprone-*"
      - "performance-*"
    Remove: 
      - "readability-*"
      - "llvmlibc-*"
      - "fuchsia-*"
      - "google-*"
      - "hicpp-*"
      - "cert-*"
      - "misc-*"
      - "clang-analyzer-*"
      - "cppcoreguidelines-*"
      - "modernize-*"
InlayHints:
  Enabled: true
  ParameterNames: true
  DeducedTypes: true
Hover:
  ShowAKA: true
Completion:
  AllScopes: true
